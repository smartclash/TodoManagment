<h1 class="Heading">My Todo-list</h1>
<form method="POST" action="<%= todos_path %>" class="AddTodo">
  <input type="text" class="AddTodo-Text" placeholder="What's next?" name="text" required>
  <input type="date" class="AddTodo-Date" name="due" required>
  <input type="submit" class="AddTodo-Add" value="Add">
</form>

<%= render partial: 'todo-item', locals: {
  title: 'Overdue',
  todos: Todo.overdue,
  show_due: true,
  hide_completed: true
} %>
<%= render partial: 'todo-item', locals: {
  title: 'Due Today',
  todos: Todo.due_today,
  show_due: false,
  hide_completed: false
} %>
<%= render partial: 'todo-item', locals: {
  title: 'Due Later',
  todos: Todo.due_later,
  show_due: true,
  hide_completed: false
} %>
